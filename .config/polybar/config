[bar/bspwm]

;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
radius = 0.0
fixed-center = true 
bottom = false
enable-ipc = true

;--------------------------------------------- COLORS 

background = #100D0C
foreground = #5E656F
line-size = 3
line-color = #046C92

border-left-size= 20
border-border-size= 20
border-size = 20
border-bottom-size = 0
border-top-size= 10
border-color = #00000000

padding-left = 0
padding-right = 0

;module-margin-left = 0
;module-margin-right = 0

;--------------------------------------------- FONTS 

font-0 = JetBrains Mono Medium:weight=medium:size=9:antialiasing=true;
font-1 = JetBrains Mono:size=9;

;--------------------------------------------- Modules 

modules-left = my-text-label bspwm
modules-center = 
modules-right = date

tray-position = none
tray-maxsize = 25
tray-padding = 2
tray-offset-y = 5
tray-background = #100D0C


;--------------------------------------------- TOP LEFT MODULES

[module/my-text-label]
type = custom/text
content = bspwm

; "content" has the same properties as "format-NAME"
content-background = 
content-foreground = #7BAAE8
content-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = 
label-focused-underline= 
label-focused-foreground= #8CD7AA
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = 
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = #5E656F
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

;--------------------------------------------- TOP RIGHT MODULES 

[module/date]
type = internal/date
date =   time = %A, %B %d  - %I:%M %p |
interval = 60
time = %A, %B %d  - %I:%M %p
label = %time%
label-padding = 2



;>>> BOTTOM BAR <<<

[bar/bottom]

;monitor = ${env:MONITOR:HDMI-1}
monitor-fallback = HDMI1
