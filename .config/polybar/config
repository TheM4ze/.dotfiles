override-redirect = false
;width = 93.25%
height = 37
;offset-x =
;offset-y =

;--------------------------------------------- LOCATION 

bottom = true

;--------------------------------------------- COLORS

background = #100D0C
foreground = #5E656F
line-size = 3
line-color = #046C92

border-left-size= 20
border-border-size= 20
border-size = 20
border-bottom-size = 10
border-top-size= 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

;--------------------------------------------- FONTS  

font-0 = JetBrains Mono-medium:weight=medium:size=9;
font-1 = JetBrains Mono:size=9;

;--------------------------------------------- MODULES 

modules-left =  text
modules-center = spotify1
modules-right =  discord jgmenu rofi

;--------------------------------------------- BOTTOM LEFT MODULES

[module/text]
type = custom/text
content = babyjesus@TheM4ze

; "content" has the same properties as "format-NAME"
content-background = 
content-foreground = #5E656F
content-padding = 2

;--------------------------------------------- BOTTOM CENTER MODULES

[module/spotify1]
type = custom/script
exec = /home/babyjesus/.config/polybar/scripts/spotify1.sh
interval = 1

format = <label>
format-foreground = #7BAAE8
format-background =
format-padding = 2
format-underline =
format-prefix = "  "
format-prefix-foreground = #7BAAE8
label = %output:0:150%

;--------------------------------------------- BOTTOM RIGHT MODULES

[module/discord]
type = custom/script
exec = echo "  discord"
;exec = echo " "
interval = 1
tail = true
format-foreground = #8CD7AA
format-background =
format-prefix-foreground =
format-underline =
click-left = discord &
click-right = killall Discord && killall Discord
;format-prefix = ""

[module/jgmenu]
type = custom/script
interval = 120
exec = echo "jgmenu"
click-left = "jgmenu_run >/dev/null 2>&1 &"
format-foreground = #8CD7AA
format-background =
format-underline =

[module/rofi]
type = custom/script
exec = echo "rofi"
click-left = rofi -modi run,drun,window -show drun
format-padding = 1
format-foreground = #8CD7AA
format-underline =
#7BAAE8

