;--------------------------------------------- TOP LEFT MODULES

[module/my-text-label]
type = custom/text
content = bspwm

; "content" has the same properties as "format-NAME"
content-background = #7BAAE8
content-foreground = #08090B
content-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background =
label-focused-underline =
label-focused-foreground = #8CD7AA
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2
label-occupied-foreground =

label-urgent = %index%!
label-urgent-background =
label-urgent-padding = 2

label-empty = %index%
label-empty-background =
label-empty-foreground = #484E5B
label-empty-padding = 2

; Separator in between workspaces
label-separator =

;--------------------------------------------- TOP RIGHT MODULES

[module/date]
type = internal/date
date =   time = %A, %B %d  - %I:%M %p |
interval = 60
time = %A, %B %d  - %I:%M %p
label = %time%
label-padding = 2





